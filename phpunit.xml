<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true"
         executionOrder="default"
>
    <php>
        <env name="APP_ENV" value="test"/>
        <env name="APP_DEBUG" value="1"/>
        <env name="KERNEL_CLASS" value="Wexample\SymfonyLoader\Tests\Fixtures\App\AppKernel"/>
    </php>

    <testsuites>
        <testsuite name="unit">
            <directory>tests/Unit</directory>
        </testsuite>

        <testsuite name="integration">
            <directory>tests/Integration</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <exclude>
            <directory prefix="Abstract">src/Controller</directory>
            <directory suffix=".php">src/DependencyInjection</directory>
            <file>src/Command/CheckNodeInstallCommand.php</file>
            <file>src/Interface/LoaderBundleInterface.php</file>
            <file>src/WexampleSymfonyLoaderBundle.php</file>
        </exclude>
    </source>

</phpunit>
